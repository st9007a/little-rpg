<DialogBox xmlns="MarkLight">
    <Region Height="75%" Alignment="Top">
    </Region>
    <Region 
        Height="25%"
        Alignment="Bottom" 
        Margin="10,10,10,10"
        >
        <Panel
            BackgroundColor="#000000"
            ContentAlignment="TopLeft"
            IsActive="{active}"
            HorizontalScrollbarVisibility="Hidden"
            VerticalScrollbarVisibility="Hidden"
            >
            <Label 
                FontColor="#ffffff"
                Text="{message}" 
                Margin="10,10,10,10"
                />
        </Panel>
    </Region>
</DialogBox>